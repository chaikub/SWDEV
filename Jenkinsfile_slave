pipeline {
    agent any
        environment {
            DOCKER_CONTAINER_NAME_FRONTEND = "chaikub/my-frontend_image:1.0"
            DOCKER_CONTAINER_NAME_BACKEND = "chaikub/my-frontend_image:1.0"
            DOCKER_IMAGE_NAME_FRONTEND     = "frontend_server"
            DOCKER_IMAGE_NAME_BACKEND     = "backend_server"
        }


        stages {
            stage('Initialize Stage') {
                steps {
                    echo 'Initial : Delete containers and images'
                    sh 'docker stop ${DOCKER_CONTAINER_NAME_FRONTEND} || true'
                    sh 'docker stop ${DOCKER_CONTAINER_NAME_BACKEND} || true'
                    sh 'docker rm ${DOCKER_CONTAINER_NAME_FRONTEND} || true'
                    sh 'docker rm ${DOCKER_CONTAINER_NAME_BACKEND} || true'
                    sh 'docker rmi ${DOCKER_IMAGE_NAME_FRONTEND} || true'
                    sh 'docker rmi ${DOCKER_IMAGE_NAME_BACKEND} || true'
                }
            }

            stage('Pull Stage') {
                steps {
                    dir('SWDEV') {
                        echo "Current path is ${pwd()}"
                        sh "docker pull chaikub/my-backend_image:1.0"
                        sh "docker pull chaikub/my-frontend_image:1.0"
                    }
                }
            }

            stage('Run Stage') {
                steps {
                    dir('SWDEV') {
                        echo "Current path is ${pwd()}"
                        sh "docker run -d -p 8081:80 --name backend_server  my-backend_image:1.0"
                        sh "docker run -d -p 8082:80 --name frontend_server my-frontend_image:1.0"
                    }
                }
            }
        
        }
}
